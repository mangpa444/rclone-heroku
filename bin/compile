#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install rclone"
BUILD_DIR=$1
VENDOR_DIR="vendor"
FILE="rclone-current-linux-amd64"
DOWNLOAD_URL="https://downloads.rclone.org/$FILE.zip"
webui_URL="https://raw.githubusercontent.com/mangpa444/rclone-heroku/master/bin/webui.sh"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p rclone
cd rclone
wget -q $DOWNLOAD_URL
wget -q $webui_URL
unzip -qqj $FILE.zip
rm -rf $FILE.zip

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/rclone.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/rclone"' >> $PROFILE_PATH
